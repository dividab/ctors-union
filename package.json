{
  "name": "ctors-union",
  "version": "1.0.0",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "repository": "git@github.com:dividab/ctors-union.git",
  "author": "Jonas Kello <jonas.kello@gmail.com>",
  "license": "MIT",
  "files": [
    "/lib",
    "/src",
    "package.json",
    "CHANGELOG.md",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "build": "tsc -p .",
    "clean": "rm -rf lib",
    "test": "jest",
    "test-coverage": "jest --coverage",
    "prepare": "husky install",
    "verify": "yarn test-coverage",
    "preversion": "yarn verify",
    "postversion": "git push --tags && yarn publish --new-version $npm_package_version && git push --follow-tags && echo \"Successfully released version $npm_package_version!\""
  },
  "devDependencies": {
    "@types/jest": "^26.0.22",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "ts-jest": "^26.5.4",
    "typescript": "^4.2.3"
  },
  "lint-staged": {
    "*.{ts,tsx,js,json,css,md}": [
      "prettier --write"
    ]
  },
  "prettier": {
    "printWidth": 120,
    "trailingComma": "es5",
    "arrowParens": "always"
  }
}
